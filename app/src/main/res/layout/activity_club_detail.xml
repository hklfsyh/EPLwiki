<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/club_detail_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            tools:srcCompat="@drawable/manchesterunited"/>

        <TextView
            android:id="@+id/club_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_gravity="center"
            tools:text="Manchester United"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/action_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:text="Share" />

        <!-- Coach section moved here -->
        <TextView
            android:id="@+id/club_detail_coach_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_marginBottom="8dp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="Coach"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/club_detail_coach_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/rubenamorim"/>

            <TextView
                android:id="@+id/club_detail_coach_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?android:attr/textColorPrimary"
                tools:text="Erik ten Hag"/>
        </LinearLayout>

        <!-- Key Players section moved below Coach -->
        <TextView
            android:id="@+id/club_detail_players_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_marginBottom="8dp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="Key Players"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/club_detail_players_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="16dp"/>

        <!-- Section labels and content -->
        <TextView
            android:id="@+id/label_founded_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="?android:attr/textColorPrimary"
            android:text="Founded"/>

        <TextView
            android:id="@+id/club_detail_founded_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="8dp"
            tools:text="1878"/>

        <TextView
            android:id="@+id/label_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="?android:attr/textColorPrimary"
            android:text="Slogan"/>

        <TextView
            android:id="@+id/club_detail_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="16dp"
            tools:text="Glory Glory Man United"/>

        <TextView
            android:id="@+id/label_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="?android:attr/textColorPrimary"
            android:text="Description"/>

        <TextView
            android:id="@+id/club_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:justificationMode="inter_word"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="Manchester United Football Club is a professional football club based in Manchester, England. It was founded in 1878 and is one of the most successful clubs in English football." />

        <TextView
            android:id="@+id/label_stadium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="?android:attr/textColorPrimary"
            android:text="Stadium"/>

        <TextView
            android:id="@+id/club_detail_stadium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="8dp"
            tools:text="Old Trafford"/>

        <ImageView
            android:id="@+id/club_detail_stadium_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            tools:srcCompat="@drawable/manchesterunited"/>
    </LinearLayout>
</ScrollView>
