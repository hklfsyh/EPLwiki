<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EPLwiki" parent="Theme.Material3.DayNight">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/backgroundPrimary_light</item>
        <item name="colorSurface">@color/cardBackground_light</item>
        <item name="colorBackgroundFloating">@color/backgroundSecondary_light</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textPrimary_light</item>
        <item name="android:textColorSecondary">@color/textSecondary_light</item>

        <!-- Button colors -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/buttonPrimary</item>
        <item name="android:textColor">@color/buttonPrimaryText</item>
    </style>

    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.EPLwiki" parent="Base.Theme.EPLwiki" />
</resources>